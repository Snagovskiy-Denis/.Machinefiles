set $terminal i3-sensible-terminal

# start a terminal
bindsym $mod+Return exec $terminal

# start rofi
bindsym $mod+Shift+Return exec "rofi -modi drun,run -show drun"
# run shell command:
#bindsym $mod+d exec --no-startup-id "rofi -show drun -font \\"DejaVu 9\\" -run-shell-command '{terminal} -e \\" {cmd}; read -n 1 -s\\"'"

# TODO: Should I create launch-mode?
# favor-apps
bindsym $mod+Shift+w exec vivaldi-stable
bindsym $mod+Shift+d exec gnome-dictionary
bindsym $mod+Shift+r exec $terminal -e ranger
bindsym $mod+Shift+n exec $terminal -e nvim

# custom scripts
bindsym $mod+Shift+o exec $terminal -e oj
bindsym $mod+Shift+f exec $terminal -e dmconf

# reload the configuration file (keycode 67 = <F1>)
bindcode $mod+67 reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindcode $mod+71 restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+x exec dmprompt "Are you sure you want to exit i3?" "i3-msg exit"

# jump to urgent window (keycode 69 = <F3>)
bindcode $mod+69 [urgent=latest] focus

# keycode 148 =    (calculator)
# keycode 152 =    (desktokp)
# keycode 163 =    (mail)
# keycode 180 = ﮟ   (home)
bindcode 148 exec gnome-calculator
#bindcode 152 exec ""
#bindcode 163 exec ""
#bindcode 180 exec ""


#######
# Bar #
#######
bar {
        status_command          i3blocks -c ~/.config/i3/i3blocks.conf
        i3bar_command           i3bar --transparency
        position                top
        font                    pango:Hack Nerd Font 12
        strip_workspace_numbers yes
}

# bar toggle, hide or show
bindsym $mod+m bar mode toggle
